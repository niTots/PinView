<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.NiTots.PinView" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/pin_stroke_color</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="rippleColor">@null</item>
        <item name="cardElevation">0dp</item>
        <item name="pin_drawingStyle">circle</item>
        <item name="pin_animationStyle">coloring</item>
        <item name="pin_size">medium</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="pin_color">@android:color/black</item>
        <item name="pin_animationDuration">1000</item>
    </style>

    <style name="Widget.NiTots.PinSetView" parent="">
        <item name="pinSet_size">large</item>
        <item name="pinSet_horizontalMargin">16dp</item>
        <item name="pinSet_pinCount">4</item>
        <item name="pinSet_isLabelShown">true</item>
        <item name="pinSet_labelPosition">above</item>
        <item name="pinSet_labelMargin">12dp</item>
    </style>

    <style name="Widget.NiTots.PinSetView.ErrorLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textAppearance">
            @style/TextAppearance.NiTots.PinSet.ErrorLabelAppearance
        </item>
        <item name="android:text">@string/pinSet_errorLabel_text</item>
    </style>
</resources>